<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
   
    <div class="col-8 offset-3">
        <h3>listing details</h3>
    </div>

    <div class="card show-card col-6 offset-3" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="list">
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b>
          <br>
          <%= listing.description %>
          <br>
          &#x20B9;<%= listing.price.toLocaleString("en-IN") %>
          <br>
          <%= listing.location %><br>
          <%= listing.country %>
        </p>
        </div>
      </div>

    <div class="btns">
        <a href="/listing/<%=listing._id %>/edit" class="btn edit-btn   col-1 offset-4">EDIT</a>
    <br>
    <form  method="post"  action="/listing/<%=listing._id %>?_method=DELETE">
        <button class="btn Delete-btn  btn-dark offset-6">DELETE</button>
    
    </form>
    
</div>
</div>
<br>
</body>

